<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Cricket Bats</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">🏏 Cricket Store</a>
        <div>
          <a href="/cart" class="btn btn-outline-light">Cart</a>
        </div>
      </div>
    </nav>

    <div class="container my-5">
      <h1 class="text-center mb-4">Available Cricket Bats</h1>
      <div class="row g-4">
        <% bats.forEach(bat => { %>
        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body text-center">
              <h5 class="card-title"><%= bat.name %></h5>
              <p class="card-text text-success fw-bold">₹<%= bat.price %></p>
              <form action="/add-to-cart" method="POST">
                <input type="hidden" name="id" value="<%= bat.id %>" />
                <button type="submit" class="btn btn-primary">
                  Add to Cart
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
